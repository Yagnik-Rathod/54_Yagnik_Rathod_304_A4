<div class="card shadow-sm">
  <div class="card-body">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-2">
      <div>
        <h4 class="card-title mb-0">Students</h4>
        <small class="text-muted">List of registered students and marks</small>
      </div>
      <form class="d-flex" action="/" method="get" style="max-width:420px;">
        <input name="q" class="form-control me-2" type="search" placeholder="Search by name / roll / class" value="<%= q || '' %>">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </form>
    </div>

    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Roll</th>
            <th>Class</th>
            <th class="text-end">Math</th>
            <th class="text-end">Science</th>
            <th class="text-end">English</th>
            <th class="text-end">Total</th>
            <th class="text-end">Percent</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (students.length === 0) { %>
            <tr><td colspan="10" class="text-center">No students found. <a href="/students/add">Add one</a>.</td></tr>
          <% } %>
          <% students.forEach((s, i) => { %>
            <tr>
              <td><%= i+1 %></td>
              <td><strong><%= s.name %></strong></td>
              <td><%= s.roll %></td>
              <td><%= s.className %></td>
              <td class="text-end"><%= s.marks?.math ?? 0 %></td>
              <td class="text-end"><%= s.marks?.science ?? 0 %></td>
              <td class="text-end"><%= s.marks?.english ?? 0 %></td>
              <td class="text-end"><%= s.total ?? 0 %></td>
              <td class="text-end"><%= (s.percent ?? 0).toFixed(2) %>%</td>
              <td>
                <a href="/students/<%= s._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
                <form action="/students/<%= s._id %>?_method=DELETE" method="post" class="d-inline" onsubmit="return confirm('Delete this student?');">
                  <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
