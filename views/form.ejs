<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="card-title mb-3"><%= title %></h4>

        <form action="<%= action %>" method="<%= method %>">
          <div class="row g-3">
            <div class="col-md-8">
              <label class="form-label">Name <span class="text-danger">*</span></label>
              <input required name="name" class="form-control" value="<%= student ? student.name : '' %>">
            </div>
            <div class="col-md-4">
              <label class="form-label">Roll <span class="text-danger">*</span></label>
              <input required name="roll" class="form-control" value="<%= student ? student.roll : '' %>">
            </div>

            <div class="col-md-4">
              <label class="form-label">Class</label>
              <input name="className" class="form-control" value="<%= student ? student.className : '' %>">
            </div>

            <div class="col-md-8"></div>

            <div class="col-md-4">
              <label class="form-label">Math</label>
              <input name="math" id="math" type="number" min="0" max="100" class="form-control mark-input" value="<%= student ? student.marks.math : 0 %>">
            </div>
            <div class="col-md-4">
              <label class="form-label">Science</label>
              <input name="science" id="science" type="number" min="0" max="100" class="form-control mark-input" value="<%= student ? student.marks.science : 0 %>">
            </div>
            <div class="col-md-4">
              <label class="form-label">English</label>
              <input name="english" id="english" type="number" min="0" max="100" class="form-control mark-input" value="<%= student ? student.marks.english : 0 %>">
            </div>

            <div class="col-md-6">
              <label class="form-label">Total</label>
              <input id="total" type="text" class="form-control" readonly value="<%= student ? student.total : 0 %>">
            </div>
            <div class="col-md-6">
              <label class="form-label">Percent</label>
              <input id="percent" type="text" class="form-control" readonly value="<%= student ? (student.percent ?? 0).toFixed(2) : '0.00' %>">
            </div>

            <div class="col-12 d-flex justify-content-end gap-2">
              <a href="/" class="btn btn-outline-secondary">Cancel</a>
              <button type="submit" class="btn btn-primary"><%= title.includes('Add') ? 'Save' : 'Update' %></button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>
